# search for text in files contents  
grep -r -i <text or regex> <directory>

find /path/to/directory -type f -exec grep -nH "8080" {} +

# check which process is using a specific port
lsof -n -i :80 | grep LISTEN

# how to sort files recursively in descending order of size
du -bh --max-depth=1 | sort -hr
